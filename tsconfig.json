{
  "compilerOptions": {
    "outDir": "./dist/",
    // path to output directory
    "sourceMap": true,
    // allow sourcemap support
    "strictNullChecks": true,
    // enable strict null checks as a best practice
    "module": "es6",
    // specifiy module code generation
    "jsx": "react",
    // use typescript to transpile jsx to js
    "target": "es5",
    // adds full support for the ES2015 iteration protocol for ES3 and ES5 targets. 
    "downlevelIteration": true,
    // specify ECMAScript target version
    "allowJs": true,
    // allow a partial TypeScript and JavaScript codebase
    "moduleResolution": "node",
    "lib": [
      "ES5",
      "ES6",
      "ES2015.Core",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./app/*"
  ],
  "files": [
    ".modernizrrc.json.d.ts"
  ],
  // types option has been previously configured
  "types": [
    // add node as an option
    "node"
  ]
}